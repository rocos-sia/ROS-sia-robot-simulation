<launch>

    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen" clear_params="true">
        <rosparam file="$(find sia_agv_simulation)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find sia_agv_simulation)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find sia_agv_simulation)/param/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find sia_agv_simulation)/param/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find sia_agv_simulation)/param/base_local_planner_params.yaml" command="load" />


        <remap from="/cmd_vel" to="/sia_agv/cmd_vel" />
        <remap from="/odom" to="/sia_agv/odom" />
    </node>

</launch>
